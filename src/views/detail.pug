extends base

block content
  header.site-header
    .container
      .logo-container(style="position: relative;margin-top: 45px;")
        img.header-bg(src="/images/header.png" alt="background" style="width: 100%; margin-bottom: -30px;")
        a.site-logo(href="/" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);")
  .product-detail-container
    .product-left
      .product-images
        .main-image
          img.product-img(src=product.imageUrl || "/images/placeholder.jpg", alt=product.name)
        .image-nav
          button.arrow-left
            i.icon-arrow-back
          button.arrow-right
            i.icon-arrow-forward
    
    .product-right
      .product-header
        .brand-info
          .brand= product.category || "Asics"
          h1.product-title= product.name || product.name
          p.product-subtitle= product.description      
      
      .product-price-section
        .price-label 즉시 구매가
        .price-value= product.price ? product.price.toLocaleString() + '원' : '가격 정보 없음'
      
      .action-buttons
        button.btn-buy 구매
        button.btn-sell 판매
      
      .product-details
        .detail-row
          .detail-label 최근 거래가
          .detail-value
            span.price-drop ▼ 25,000 (-9.7%)
            span.price 275,000원
        
        .detail-row
          .detail-label 발매가
          .detail-value 230,000원
        
        .detail-row
          .detail-label 모델번호
          .detail-value 1201A869-020
        
        .detail-row
          .detail-label 출시일
          .detail-value 23/03/04
        
        .detail-row
          .detail-label 대표 색상
          .detail-value Dark grey / Blue
      
      .market-price-section
        h3.section-title 시세
        .period-tabs
          button.period-tab 1개월
          button.period-tab 3개월
          button.period-tab 6개월
          button.period-tab 12개월
          button.period-tab.active 전체
        
        .price-chart
          .chart-container
            img.chart-img(src="/images/price-chart.png", alt="가격 차트")
          .current-price
            span.price-tag 275,000원

block append styles
  link(rel="stylesheet", href="/css/styles.css")

block scripts
  script.
    document.addEventListener('DOMContentLoaded', function() {
      // 기간 탭 선택
      const periodTabs = document.querySelectorAll('.period-tab');
      periodTabs.forEach(tab => {
        tab.addEventListener('click', function() {
          periodTabs.forEach(t => t.classList.remove('active'));
          this.classList.add('active');
        });
      });
    });